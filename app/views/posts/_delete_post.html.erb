<% unless current_user.nil? || cannot?(:destroy, post) %>
  <%= form_with url: url, method: :delete do |form| %>
    <%= form.hidden_field :post_id, value: post.id %>
    <%= form.hidden_field :url, value: request.url %>
    <%= button_to 'Delete', '#', onclick: 'Rails.fire(this.parentNode, \'submit\')' %>
  <% end %>
<% end %>
