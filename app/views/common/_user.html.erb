<li>
  <div>
    <%= image_tag "#{user.photo}", width:'100vw', height:'100%', class: "all-border mx-auto w-100"%>
  </div>
  <%= link_to user.name, "/users/#{user.id}" %>
    <div>
      <div class="all-border p-2 my-2">
          <h2><%= user.name %></h2>
          <p>Number of posts:<%= user.posts_counter || 0 %></p>
      </div>
      <% if current_page?(users_path) || current_page?(root_path)%>
        <p><%= user.bio[0..150]... %></p>
      <% end %> 
      <div>
        <% if current_page?(users_path) || current_page?(root_path)%>
          <%= link_to 'View User', user %>
        <% end %>
      </div>
    </div>
</li>
